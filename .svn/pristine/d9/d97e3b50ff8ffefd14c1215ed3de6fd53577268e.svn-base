.collection{
  margin-top:80px;
  height:520px;
  position: relative;
  padding-bottom:130px;
}
.collection:before,
.collection:after{
  content: "";
  width:29px;
  height: 29px;
  position: absolute;
  bottom:-14px;
  background:url(../../image/plus.png) 50% 50% no-repeat;
}
.collection:before{left:-14px;}
.collection:after{right:-14px;}
.collection .summary{
  width:350px;
  float: left;
  position: relative;
}
.collection .summary time{
  position: absolute;
  font-size: 12px;
  color: #727171;
  height:30px;
  left:0;
  top:-30px;
  line-height: 1;
  font-style: italic;
}
.collection .summary h2{
  font-size: 48px;
  color: #ffffff;
  line-height:52px;
  height:116px;
}
.collection .summary p{
  font-size: 12px;
  line-height:1;
  height:15px;
  color: #727171;
}
.collection .summary span{
  margin-top:54px;
  margin-bottom: 10px;
  width:76px;
  height:4px;
  background: #1b1b1b;
  position: relative;
  display: block;
}
.collection .summary span:after{
  content: '';
  width:26px;
  height:4px;
  background:#fbd71d;
  position: absolute;
  top:0;
  left:25px;
}
.collection .summary .slimScroll{
  width: 240px;
  font-size:12px;
  line-height:2;
  color: #727171;
  height:320px;
  padding-right: 20px;
  overflow: hidden;
}
.collection .summary .slimScroll .slimScrollDiv{
  overflow: visible!important;
}
.collection .summary .slimScroll .slimScrollBar{
  opacity: 1!important;
}

.collection .gallery{
  width:850px;
  height:520px;
  float: left;
}
.collection .gallery .booth{
  width:680px;
  height:520px;
  margin-right:40px;
  overflow: hidden;
  float: left;
  position: relative;
}
.collection .gallery .thumb-warp .thumb-content ul li img,
.collection .gallery .booth img{
  position: absolute;
  height:100%;
  left:50%;
  top:50%;
  left:0\9;
  top:0\9;
  transform:translate(-50%,-50%);
  -webkit-transform:translate(-50%,-50%);
  -ms-transform:translate(-50%,-50%);
  -moz-transform:translate(-50%,-50%);
  -o-transform:translate(-50%,-50%);
}
.collection .gallery .thumb-warp{
  width:130px;
  height:520px;
  position: relative;
  float: left;
}
.collection .gallery .thumb-warp .to_top,
.collection .gallery .thumb-warp .to_bottom{
  width:130px;
  height:30px;
  left: 0;
  position: absolute;
  cursor: pointer;
  background-position: 50% 50%;
  background-repeat: no-repeat;
}
.collection .gallery .thumb-warp .to_top{ top: -30px;background-image:url(../../image/icon_up.png);}
.collection .gallery .thumb-warp .to_bottom{ bottom: -30px;background-image:url(../../image/icon_down.png);}
.collection .gallery .thumb-warp .thumb-content{
  width:130px;
  height:520px;
  overflow: hidden;
  position: relative;
}
.collection .gallery .thumb-warp .thumb-content ul{
  width:130px;
  position: absolute;
  left: 0;
  top: 0;
}
.collection .gallery .thumb-warp .thumb-content ul li{
  width:128px;
  height:128px;
  border:1px transparent solid;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}
.collection .gallery .thumb-warp .thumb-content ul li.cur{
  border-color: #fbd71d;
}
.collection .gallery .thumb-warp .thumb-content ul li img{

}
.collection_masonry_warp{
  width:1100px;
  margin: 0 auto;
  padding-bottom:100px;
}
.collection_masonry_warp .title{
  height:130px;
  line-height: 130px;
  color: #5e5e5e;
  font-size: 54px;
  text-align: center;
  font-weight: bold;
  font-style: italic;
  position: relative;
}
.collection_masonry_warp .title:before,
.collection_masonry_warp .title:after{width:400px;height:4px;background:rgba(255,255,255,.2);top:63px;content:""; position: absolute;}
.collection_masonry_warp .title:before{
  left:0;}
.collection_masonry_warp .title:after{
  right: 0;}
.collection_masonry{width:1100px;}
.collection_masonry .item{
  width:350px;
}
.collection_masonry .item .img{
  width:100%;
}
.collection_masonry .item .img img{
  width:100%;
  display: block;
  border-radius:3px;
}
.collection_masonry .item .summary{padding-bottom:20px;}
.collection_masonry .item .summary h2{font-size:16px;color: #ffffff;line-height:25px;padding:10px 0;}
.collection_masonry .item .summary h3{font-size:14px;color:#c9caca;line-height:1.5;}
.collection_masonry .item .summary p{font-size:12px;color:#c9caca;line-height:2;padding-top: 10px;}
